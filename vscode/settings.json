{
    // "docker.host": "tcp://localhost:23750"     // see setup instructions for vs code in a remote container
    "search.showLineNumbers": true,
    "editor.fontSize": 13,
    "editor.semanticHighlighting.enabled": true,
    "editor.suggestSelection": "first",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.lineNumbers": "relative",
    "editor.tabSize": 2,
    "editor.formatOnPaste": true,
    "editor.minimap.showSlider": "always",
    "editor.suggest.insertMode": "replace",
    "editor.suggest.showStatusBar": true,
    "workbench.activityBar.visible": false,
    "workbench.editor.showTabs": false,
    "files.autoSave": "afterDelay",
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "$HOME/.config/nvim/vscode-init.vim",
    "vscode-neovim.logOutputToConsole": true,
    "whichkey.bindings": [
        {
            "key": "s",
            "name": "BigGrep Search",
            "type": "command",
            "command": "omni-search-ui:quick-search-biggrep"
        },
        {
            "key": "d",
            "name": "Uncommitted changes",
            "type": "command",
            "command": "fb-hg.diff"
        },
        {
            "key": "l",
            "name": "Show/Hide Tnterative SmartLog",
            "type": "command",
            "command": "fb-hg.toggle-interactive-smartlog"
        },
        {
            "key": "f",
            "name": "File Explorer",
            "type": "command",
            "command": "workbench.files.action.focusFilesExplorer",
            "when": "!fileExplorerFocus"
        },
        {
            "key": "t",
            "name": "Toggle Terminal",
            "type": "command",
            "command": "workbench.action.togglePanel"
        },
        {
            "key": "e",
            "name": "Toggle Explore Sidebar",
            "type": "command",
            "command": "workbench.action.toggleSidebarVisibility"
        },
    ],
    "terminal.integrated.profiles.linux": {
        "tmux": {
            "path": "/usr/bin/tmux",
            "args": [
                "new-session",
                "-A",
                "-s",
                "vscode-${workspaceFolderBasename}"
            ],
        },
    },
    "terminal.integrated.defaultProfile.linux": "tmux",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.osx": "tmux",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.iconTheme": "material-icon-theme"
}
